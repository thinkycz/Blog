{% extends '::base.html.twig' %}

{% block body -%}

    <h2>Create a new post</h2>

    <form class="form-horizontal" role="form" method="post" action="{{ path('admin_post_create') }}">

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" placeholder="Title" name="title">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Publish from</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="inputEmail3" placeholder="Format: d.m.Y H:i" name="publishfrom">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Publish to</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="inputEmail3" placeholder="Format: d.m.Y H:i" name="publishto">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="private"> Make this post private
                    </label>
                </div>
            </div>
        </div>

        <textarea class="form-control" rows="10" name="text"></textarea>

        <br>

        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><a href="{{ path('admin_post') }}">Back to the list</a></button>
            <button type="submit" class="btn btn-default"><a>Create</a></button>
        </div>

    </form>

{% endblock %}
