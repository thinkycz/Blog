{% extends '::base.html.twig' %}

{% block body -%}

<h2>Edit this post</h2>

    <form class="form-horizontal" role="form" method="post" action="{{ path('admin_post_update', { 'id': entity.id }) }}">

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" placeholder="Title" name="title" value="{{ entity.title }}">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Publish from</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="inputEmail3" placeholder="Format: d.m.Y H:i" name="publishfrom" value="{{ entity.publishFrom|date('d.m.Y H:i') }}">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Publish to</label>
            <div class="col-sm-10">
                <input type="datetime" class="form-control" id="inputEmail3" placeholder="Format: d.m.Y H:i" name="publishto" value="{{ entity.publishTo|date('d.m.Y H:i') }}">
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Tags</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" placeholder="Separate by |" name="tags" value="{% for tag in entity.tags %}{{ tag }} | {% endfor %}">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="private" {% if entity.private %}checked{% endif %}> Make this post private
                    </label>
                </div>
            </div>
        </div>

        <textarea class="form-control" rows="10" name="text">{{ entity.text }}</textarea>

        <br>

        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><a href="{{ path('admin_post') }}">Back to the list</a></button>
            <button type="button" class="btn btn-default"><a href="{{ path('admin_post_delete', { 'id': entity.id }) }}">Delete</a></button>
            <button type="submit" class="btn btn-default"><a>Update</a></button>
        </div>

    </form>

{% endblock %}
