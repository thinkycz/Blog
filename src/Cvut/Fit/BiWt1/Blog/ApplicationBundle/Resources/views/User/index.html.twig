{% extends '::base.html.twig' %}

{% block body -%}

    <br>

    <div class="panel panel-default">
        <div class="panel-heading">
            List of users &bull; <a href="{{ path('admin_user_new') }}">Create a new user</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.password }}</td>
                    <td>
                        <a href="{{ path('admin_user_show', { 'id': entity.id }) }}">show</a>
                        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% endblock %}
