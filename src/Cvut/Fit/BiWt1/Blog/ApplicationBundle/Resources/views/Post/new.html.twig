{% extends '::base.html.twig' %}

{% block body -%}

    <h2>Create a new post</h2>

    <form class="form-horizontal" role="form" method="post" action="{{ path('admin_post_create') }}" enctype="multipart/form-data">

        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="Title" name="title">
            </div>
        </div>

        <div class="form-group">
            <label for="publishfrom" class="col-sm-2 control-label">Publish from</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="publishfrom" placeholder="Format: d.m.Y H:i" name="publishfrom">
            </div>
        </div>

        <div class="form-group">
            <label for="publishto" class="col-sm-2 control-label">Publish to</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="publishto" placeholder="Format: d.m.Y H:i" name="publishto">
            </div>
        </div>

        <div class="form-group">
            <label for="tags" class="col-sm-2 control-label">Tags</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="tags" placeholder="Separate by |" name="tags">
            </div>
        </div>

        <div class="form-group">
            <label for="files" class="col-sm-2 control-label">Add files</label>
            <div class="col-sm-10">
                <span class="form-control"><input type="file" id="files" name="files[]" multiple></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label for="private">
                        <input type="checkbox" name="private" id="private"> Make this post private
                    </label>
                </div>
            </div>
        </div>

        <textarea class="form-control" rows="10" name="text"></textarea>

        <br>

        <div class="btn-group" role="group" aria-label="...">
            <a href="{{ path('admin_post') }}" class="btn btn-default">Back to the list</a>
            <button type="submit" class="btn btn-default">Create</button>
        </div>

    </form>

{% endblock %}
