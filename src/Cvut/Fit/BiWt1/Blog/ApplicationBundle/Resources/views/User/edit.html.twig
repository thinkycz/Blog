{% extends '::base.html.twig' %}

{% block body -%}
    <h2>Edit this user</h2>

    <form method="post" action="{{ path('admin_user_update', { 'id': entity.id }) }}">

    <div class="input-group input-group-lg">
        <span class="input-group-addon">Username</span>
        <input type="text" class="form-control" value="{{ entity.name }}" name="username">
    </div>

    <br>

    <div class="input-group input-group-lg">
        <span class="input-group-addon">Password</span>
        <input type="password" class="form-control" value="{{ entity.password }}" name="password">
    </div>

        <br>

        <div class="row">
            <div class="col-lg-4">
                <div class="input-group">
                    <span class="input-group-addon"><input type="radio" name="role" aria-label="..." value="ROLE_ADMIN" {% if entity.role == 'ROLE_ADMIN' %}checked{% endif %}></span>
                    <input type="text" class="form-control" value="ROLE_ADMIN - All permissions" readonly>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="input-group">
                    <span class="input-group-addon"><input type="radio" name="role" aria-label="..." value="ROLE_AUTHOR" {% if entity.role == 'ROLE_AUTHOR' %}checked{% endif %}></span>
                    <input type="text" class="form-control" value="ROLE_AUTHOR - Can create posts" readonly>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="input-group">
                    <span class="input-group-addon"><input type="radio" name="role" aria-label="..." value="ROLE_READER" {% if entity.role == 'ROLE_READER' %}checked{% endif %}></span>
                    <input type="text" class="form-control" value="ROLE_READER - can create comments" readonly>
                </div>
            </div>
        </div>

    <br>

    <div class="btn-group" role="group" aria-label="...">
        <a href="{{ path('admin_user') }}" class="btn btn-default">Back to the list</a>
        <a href="{{ path('admin_user_delete', { 'id': entity.id }) }}" class="btn btn-default">Delete</a>
        <button type="submit" class="btn btn-default">Update</button>
    </div>

    </form>
{% endblock %}
